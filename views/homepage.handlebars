<div id="createcompany" class="modal container fade" tabindex="-1">




    <div class="modal-body">



        <!-- BEGIN PROFILE CONTENT -->
        <div class="profile-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light">
                        <div class="portlet-title tabbable-line">
                            <div class="caption caption-md">
                                <i class="icon-globe theme-font hide"></i>
                                <span class="caption-subject font-blue-madison bold uppercase">Начало работы с сервисом</span>
                            </div>
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#tab_1_1" data-toggle="tab">Создать свою компанию</a>
                                </li>
                                <li>
                                    <a href="#tab_1_2" data-toggle="tab">Присоедениться к компании</a>
                                </li>


                            </ul>
                        </div>
                        <div class="portlet-body">
                            <div class="tab-content">
                                <!-- PERSONAL INFO TAB -->
                                <div class="tab-pane active" id="tab_1_1">
                                    <form role="form" action="/createcompany" method="post" enctype="multipart/form-data">
                                        <div class="form-group form-md-line-input form-md-floating-label">
                                            <input name="name" type="text" class="form-control" id="form_control_1">
                                            <label for="form_control_1">Наименование компании</label>
                                            <span class="help-block">Здесь вводятся только буквы</span>
                                        </div>
                                        <div class="form-group form-md-line-input form-md-floating-label">
                                            <input name="bin" type="text" class="form-control" id="form_control_1">
                                            <label for="form_control_1">БИН</label>
                                            <span class="help-block">Здесь вводятся только цифры</span>
                                        </div>

                                        <div class="form-group form-md-line-input form-md-floating-label">
                                            <input name="position" type="text" class="form-control" id="form_control_1">
                                            <label for="form_control_1">Ваша должность</label>
                                            <span class="help-block">Если поле оставить пустым, по умолчанию будет "Генеральный директор"</span>
                                        </div>

                                        <div class="form-group">


                                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                                <div class="input-group input-large">
                                                    <div class="form-control uneditable-input input-fixed input-medium" data-trigger="fileinput">
                                                        <i class="fa fa-file fileinput-exists"></i>&nbsp; <span class="fileinput-filename">
														</span>
                                                    </div>
													<span class="input-group-addon btn default btn-file">
													<span class="fileinput-new">
													Выберети логотип </span>
													<span class="fileinput-exists">
													Изменить </span>
													<input type="file" name="logo">
													</span>
                                                    <a href="javascript:;" class="input-group-addon btn red fileinput-exists" data-dismiss="fileinput">
                                                        Удалить </a>
                                                </div>
                                            </div>

                                        </div>



                                        <div class="margiv-top-10">
                                            <button type="submit" class="btn green-haze">
                                                Создать компанию </button>

                                        </div>
                                    </form>
                                </div>
                                <!-- END PERSONAL INFO TAB -->
                                <div class="tab-pane" id="tab_1_2">



                                    <div class="form-group">
                                        <label class="control-label">Поиск компаний</label>


                                        <select id="companyid" class="bs-select form-control" data-live-search="true" data-size="8" >

                                          {{#each company}}


                                              <option value="{{id}}">{{name}}</option>

                                          {{/each}}





                                        </select>


                                    </div>




                                    <div class="margiv-top-10">
                                        <button id="sendreq" class="btn green-haze">
                                            Отправить запрос </button>

                                    </div>
                                </div>
                                <!-- END CHANGE AVATAR TAB -->


                                <!-- PRIVACY SETTINGS TAB -->

                                <!-- END PRIVACY SETTINGS TAB -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PROFILE CONTENT -->















    </div>

</div>



