<form class="login-form" action="/auth/local" method="post">
    <h3 class="form-title">Войти в систему</h3>
    <div class="alert alert-danger display-hide">

        <button class="close" data-close="alert"></button>

    </div>
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">Эл. адрес</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Эл. адрес" name="identifier"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Пароль</label>
        <div class="input-icon">
            <i class="fa fa-lock"></i>
            <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Пароль" name="password"/>


        </div>
    </div>
    <div class="form-actions">
        <label class="checkbox">
            <input type="checkbox" name="noremember" value="1"/> Не запоминать меня </label>
        <button type="submit" class="btn blue pull-right">
            Вход <i class="m-icon-swapright m-icon-white"></i>
        </button>
    </div>
    <div class="login-options">
        <h4>Или войдите через</h4>
        <ul class="social-icons">

            {{#each providers}}



                <li>
                    <a class="{{name}}" data-original-title="{{name}}" href="/auth/{{slug}}">
                    </a>
                </li>


            {{/each}}





        </ul>
    </div>
    <div class="forget-password">
        <h4>Восстановить пароль ?</h4>
        <p>
            нажмите <a href="javascript:;" id="forget-password">
            здесь </a>
            для сброса пароля.
        </p>
    </div>
    <div class="create-account">
        <p>
            Еще нет учетной записи ?&nbsp; <a href="javascript:;" id="register-btn">
            Нажмите здесь </a>
        </p>
    </div>
</form>
