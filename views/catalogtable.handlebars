




<div class="portlet light">
    <div class="portlet-body">

        <div class="row">
            <div class="col-md-12">
                <div class="margin-bottom-10" id="nestable_list_menu">


                    <a href="#portlet-config" class="btn" data-toggle="modal" style="margin-left: 80%; background: #DDDDDD">Работа со справочником</a>



                </div>
            </div>
        </div>




        <div class="row">
            <div class="col-md-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-notebook"></i>{{name}}
                        </div>
                        <div class="tools">
                        </div>
                    </div>
                    <div class="portlet-body">





                        <table class="table table-striped table-bordered table-hover" id="sample_1">


<thead>



                            <tr>

{{#each nameColl}}

  <th>{{col}}</th>


{{/each}}




                            </tr>



                            </thead>


                            <tbody>






                            {{#each gridrow}}
                                <tr>
                                  {{#each this}}
                                      <td>{{this}}</td>
                                  {{/each}}
                                </tr>
                            {{/each}}





                            </tbody>




                        </table>





                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- full width -->
<div id="portlet-config" class="modal container fade" tabindex="-1">




    <div class="modal-body">



        <div class="profile-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light">
                        <div class="portlet-title tabbable-line">
                            <div class="caption caption-md">
                                <i class="icon-globe theme-font hide"></i>
                                <span class="caption-subject font-blue-madison bold uppercase">Работа со справочником</span>
                            </div>
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#tab_1_1" data-toggle="tab">Добавить запись</a>
                                </li>
                                <li>
                                    <a href="#tab_1_2" data-toggle="tab">Редактировать запись</a>
                                </li>
                                <li>
                                    <a href="#tab_1_3" style="color: red;" data-toggle="tab">Удалить</a>
                                </li>

                            </ul>
                        </div>
                        <div class="portlet-body">
                            <div class="tab-content">
                                <!-- PERSONAL INFO TAB -->
                                <div class="tab-pane active" id="tab_1_1">
                                    <form role="form" action="/catalogs/create" method="post">

                                        <input type="hidden" name="catname" value="{{name}}">

                                      {{#each nameColl}}






                                        <div class="form-group form-md-line-input form-md-floating-label">
                                            <input type="hidden" name="namecol[]" value="{{col}}">

                                            <input type="text" name="value[]" class="form-control" id="form_control_1">
                                            <label for="form_control_1">{{col}}</label>
                                            <span class="help-block">Введите новое значение для колонки "{{col}}"</span>
                                        </div>


{{/each}}





                                        <div class="margiv-top-10">
                                            <button type="submit" class="btn green-haze">
                                                Сохранить запись </button>

                                        </div>
                                    </form>
                                </div>
                                <!-- END PERSONAL INFO TAB -->
                                <div class="tab-pane" id="tab_1_2">

                                    <form action="/catalogs/update" role="form" method="post">


                                        <input type="hidden" name="catname" value="{{name}}">


                                        <div class="form-group">


                                          {{#withFirst gridh}}
                                              <label class="control-label">Выберети значение для изменения колонки:  <b>{{this}}</b></label>
                                          {{/withFirst}}



                                            <select name="firstcol" class="bs-select form-control" data-live-search="true" data-size="8" >

                                              {{#each gridFirst}}

                                                  <option value="{{this}}">{{this}}</option>

                                              {{/each}}





                                            </select>


                                        </div>

                                      {{#each nameColl}}


                                          <div class="form-group form-md-line-input form-md-floating-label">
                                              <input type="hidden" name="namecol[]" value="{{col}}">

                                              <input type="text" name="value[]" class="form-control" id="form_control_1">
                                              <label for="form_control_1">{{col}}</label>
                                              <span class="help-block">Введите новое значение для колонки "{{col}}"</span>
                                          </div>


                                      {{/each}}


                                        <div class="margin-top-10">
                                            <button type="submit" class="btn green-haze">
                                                Сохранить запись </button>

                                        </div>
                                    </form>
                                </div>
                                <!-- END CHANGE AVATAR TAB -->

                                <!-- CHANGE PASSWORD TAB -->
                                <div class="tab-pane" id="tab_1_3">
                                    <form action="/catalogs/delete" method="post">

                                        <input type="hidden" name="catname" value="{{name}}">


                                        <div class="form-group">


                                          {{#withFirst gridh}}
                                              <label class="control-label">Выберети значение для удаления колонки:  <b>{{this}}</b></label>
                                          {{/withFirst}}



                                            <select name="firstcol" class="bs-select form-control" data-live-search="true" data-size="8" >

                                              {{#each gridFirst}}

                                                  <option value="{{this}}">{{this}}</option>

                                              {{/each}}





                                            </select>


                                        </div>


                                        <div class="form-group">
                                            <button type="submit" class="btn red">
                                                Удалить </button>
                                        </div>


                                    </form>
                                </div>
                                <!-- END CHANGE PASSWORD TAB -->
                                <!-- PRIVACY SETTINGS TAB -->

                                <!-- END PRIVACY SETTINGS TAB -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>















    </div>

</div>
